<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="5dp"
    android:background="#e1e1e1">

    <TextView
        android:id="@+id/txtAbout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:text="TENTANG APLIKASI"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tentangaplikasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAbout"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/tentang_aplikasi"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/pengembang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tentangaplikasi"
        android:layout_marginTop="80dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="PENGEMBANG"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="18sp" />

    <LinearLayout
        android:id="@+id/lnfoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pengembang"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/jihan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/pengembang"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/jihan" />

        <ImageView
            android:id="@+id/dayat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/pengembang"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/dayat" />
        <ImageView
            android:id="@+id/liwi"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/pengembang"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/liwi" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnfoto"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="3">

        <TextView
            android:id="@+id/namajihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Jihan Atori"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/namadayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:text="Hidayatullah"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/namaliwi"
            android:layout_width="68dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Liwinantia Salsabilah"
            android:textColor="#000"
            android:textSize="13sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/nim"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_below="@id/nama">

        <TextView
            android:id="@+id/nimjihan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09031181924019"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="13sp" />
        <TextView
            android:id="@+id/nimdayat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="09031281924049"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="#000"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/nimliwi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="09031181924028"
            android:textColor="#000"
            android:textSize="13sp" />
    </LinearLayout>



</RelativeLayout>